<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".indev.InDevFragment">

    <ImageView
        android:id="@+id/inDevImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_in_dev_mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/inDevTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/InDevPage_inn_development"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/inDevImageView"
        app:layout_constraintStart_toStartOf="@id/inDevImageView"
        app:layout_constraintTop_toBottomOf="@id/inDevImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>